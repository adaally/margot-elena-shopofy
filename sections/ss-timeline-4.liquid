      }
    }
  });

  let isAnimating = false;

  const syncSliders = (targetIndex) => {
    if (isAnimating) return;

    isAnimating = true;
    const totalSlides = imageSlider.slides.length;

    // Ð£Ð±ÐµÐ´Ð¸Ð¼ÑÑ, ÑÑÐ¾ Ð¸Ð½Ð´ÐµÐºÑ Ð² Ð´Ð¾Ð¿ÑÑÑÐ¸Ð¼ÑÑ Ð¿ÑÐµÐ´ÐµÐ»Ð°Ñ
    const safeIndex = Math.max(0, Math.min(targetIndex, totalSlides - 1));

    // Ð¡Ð¸Ð½ÑÑÐ¾Ð½Ð½Ð¾Ðµ Ð¿ÐµÑÐµÐ¼ÐµÑÐµÐ½Ð¸Ðµ ÑÐ»Ð°Ð¹Ð´ÐµÑÐ¾Ð²
    imageSlider.slideTo(safeIndex, 300);
    contentSlider.slideTo(safeIndex, 300);

    setTimeout(() => {
      isAnimating = false;
    }, 350);
  };

  // ÐÐ±ÑÐ°Ð±Ð¾ÑÐºÐ° Ð¿ÐµÑÐµÐ¼ÐµÑÐµÐ½Ð¸Ñ Ð´Ð»Ñ imageSlider
  imageSlider.on('slideChange', function() {
    if (!isAnimating) {
