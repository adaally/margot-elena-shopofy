  });

  const contentSlider = new Swiper(`.timeline-content-slider-${sectionId}`, {
    speed: 300,
    allowTouchMove: false,
    breakpoints: {
      320: {
        spaceBetween: 80,
        slidesPerView: 1,
        centeredSlides: true,
