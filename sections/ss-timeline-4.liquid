    .timeline-image-slider-wrapper-{{ section.id }} {
      display: flex !important;
      flex-wrap: nowrap !important;
    }
  
    .timeline-image-slide-{{ section.id }} {
      flex: 0 0 auto !important;
      max-width: none !important;
    }
  
    /* ÐÑÐ¿ÑÐ°Ð²Ð»ÐµÐ½Ð¸Ðµ Ð´Ð»Ñ Ð¿Ð¾ÑÐ»ÐµÐ´Ð½ÐµÐ³Ð¾ ÑÐ»Ð°Ð¹Ð´Ð° */
