  // ÐÐ±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ðµ ÑÐ»Ð°Ð¹Ð´ÐµÑÐ° Ð¿ÑÐ¸ Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸Ð¸ ÑÐ°Ð·Ð¼ÐµÑÐ° Ð¾ÐºÐ½Ð°
  let resizeTimer;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(() => {
      imageSlider.update();
      contentSlider.update();
      
      // ÐÐµÑÐµÐ¾Ð¿ÑÐµÐ´ÐµÐ»ÑÐµÐ¼ ÑÐµÑÐºÑ ÑÐ½Ð°Ð¿Ð¾Ð²
      imageSlider.snapGrid = [...imageSlider.slidesGrid];
      
      // ÐÐ±Ð½Ð¾Ð²Ð»ÑÐµÐ¼ Ð¿Ð°Ð³Ð¸Ð½Ð°ÑÐ¸Ñ
      imageSlider.pagination.render();
      imageSlider.pagination.update();
    }, 200);
  });

  // ÐÑÐ¸Ð½ÑÐ´Ð¸ÑÐµÐ»ÑÐ½Ð¾Ðµ Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¸Ðµ Ð¿Ð°Ð³Ð¸Ð½Ð°ÑÐ¸Ð¸ Ð¿ÑÐ¸ Ð´Ð¾ÑÑÐ¸Ð¶ÐµÐ½Ð¸Ð¸ Ð¿Ð¾ÑÐ»ÐµÐ´Ð½ÐµÐ³Ð¾ ÑÐ»Ð°Ð¹Ð´Ð°
  imageSlider.on('reachEnd', function() {
