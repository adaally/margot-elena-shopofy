    .timeline-pagination-{{ section.id }} {
      display: flex !important;
    }
  </style>
{% else %}
  <style>
    .timeline-pagination-{{ section.id }} {
      display: none !important;
    }
  </style>
{% endif %}

{% if dots_show_desktop %}
  <style>
    @media(min-width: 1024px) {
      .timeline-pagination-{{ section.id }} {
        display: flex !important;
      }
    }
  </style>
{% else %}
  <style>
    @media(min-width: 1024px) {
      .timeline-pagination-{{ section.id }} {
        display: none !important;
      }
    }
  </style>
{% endif %}

{% if slide_content_align_mobile == 'right' %}
  <style>
    .timeline-date-{{ section.id }} {
      order: 2;
    }

    .timeline-text-{{ section.id }} {
      order: 1;
    }
  </style>
{% endif %}


{% if slide_content_align == 'right' %}
  <style>
    @media (min-width: 1024px) {
      .timeline-date-{{ section.id }} {
        order: 2;
      }
      .timeline-text-{{ section.id }} {
        order: 1;
      }
    } 
  </style>
{% else %}
  <style>
    @media (min-width: 1024px) {
      .timeline-date-{{ section.id }} {
        order: 1;
      }
      .timeline-text-{{ section.id }} {
        order: 2;
      }
    } 
  </style>
{% endif %}

{% if arrow_hover_effect == "color" %}
  <style>
    .timeline-btn-prev-{{ section.id }}:hover,
    .timeline-btn-next-{{ section.id }}:hover {
      transition: all 0.3s ease 0s;
      border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
      background: {{ arrow_bg_hover_color }};
    }
  
    .timeline-btn-prev-{{ section.id }}:hover .animate-icon,
    .timeline-btn-next-{{ section.id }}:hover .animate-icon {
      color: {{ arrow_hover_color }};
    }
  </style>
{% elsif arrow_hover_effect == "scale" %}
  <style>
    .timeline-btn-prev-{{ section.id }}:hover,
    .timeline-btn-next-{{ section.id }}:hover {
      transform: scale(0.9);
    }

    @media(min-width: 1024px) {
      .timeline-btn-prev-{{ section.id }}:hover,
      .timeline-btn-next-{{ section.id }}:hover {
        transform: scale(0.9);
      }
    }
  </style>
{% elsif arrow_hover_effect == "arrow" %}
  <style>
    .timeline-btn-next-{{ section.id }}:hover .animate-icon:before {
      transform: translate(calc(1 * 0.125rem)) rotate(calc(1 * 45deg));
    }
  
    .timeline-btn-prev-{{ section.id }}:hover .animate-icon:before {
      transform: translate(calc(-1 * 0.125rem)) rotate(calc(1 * 45deg));
    }
    
    .timeline-btn-prev-{{ section.id }}:hover .animate-icon:after,
    .timeline-btn-next-{{ section.id }}:hover .animate-icon:after {
      opacity: 1;
      transform: scaleX(1);
    }
  </style>
{% endif %}

