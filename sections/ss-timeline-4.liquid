{%- style -%}
  {{  heading_font | font_face: font_display: 'swap' }}
  {{ date_font | font_face: font_display: 'swap' }}
  {{ text_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .timeline-heading-{{ section.id }} {
    text-align: {{ heading_align_mobile }};
  }

  .timeline-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-decoration: none;
    word-break: brak-word;
  }

  .timeline-heading-{{ section.id }} * strong {
    color: {{ heading_highlight_color }};
  }

  .timeline-pagination-wrapper-{{ section.id }} {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: {{ dots_horizontal_align_mobile }} !important;
  }

  .timeline-pagination-{{ section.id }} {
    position: relative !important;
    margin-top: {{ dots_mt_mobile }}px !important;
    width: 100% !important;
    max-width: fit-content;
    justify-content: center;
    align-items: center;
    z-index: 1 !important;
  }

  .timeline-pagination-{{ section.id }} .swiper-pagination-bullet {
    width: {{ dots_size_mobile }}px !important;
    height: {{ dots_size_mobile }}px !important;
    border: 0px !important;
    background-color: {{ dots_color }} !important;
    opacity: 0.4 !important;
    transition: all 0.25s ease 0s;
    margin: 0 2px !important;
    
  }

  .timeline-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
    opacity: 1 !important;
    transition: all 0.25s ease 0s;
  }

  .timeline-image-slider-{{ section.id }} {
    margin-top: {{ slider_mt_mobile }}px !important;
    margin-left: -{{ padding_horizontal_mobile }}rem !important;
    margin-right: -{{ padding_horizontal_mobile }}rem !important;
    padding-left: {{ padding_horizontal_mobile }}rem !important;
    padding-right: {{ padding_horizontal_mobile }}rem !important;
  }

  .timeline-content-slider-{{ section.id }} {
    margin-top: {{ slide_content_mt_mobile }}px !important;
    margin-left: -{{ padding_horizontal_mobile }}rem !important;
    margin-right: -{{ padding_horizontal_mobile }}rem !important;
    padding-left: {{ padding_horizontal_mobile }}rem !important;
    padding-right: {{ padding_horizontal_mobile }}rem !important;
  }

  .timeline-image-slider-wrapper-{{ section.id }} {
    align-items: end !important;
  }

  .timeline-content-slider-wrapper-{{ section.id }} {
    margin-left: 0rem;
  }

  .timeline-image-slide-{{ section.id }} {
    border: {{ image_border_thickness }}px solid {{ image_border_color }} !important;
    border-radius: {{ image_radius }}px !important;
    overflow: hidden !important;
    opacity: 0.3 !important;
    transition: all 0.25s ease 0s !important;
  }

  .timeline-image-slide-{{ section.id }}.swiper-slide-active {
    opacity: 1 !important;
    transition: all 0.25s ease 0s !important;
  }

  .timeline-image-slide-{{ section.id }} img,
  .timeline-image-slide-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .timeline-image-slide-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .timeline-content-slide-{{ section.id }} {
    display: flex !important;
    flex-direction: column !important;
    gap: {{ slide_content_gap_mobile }}px !important;
    opacity: 0.1;
    transition: all 0.25s ease 0s;
  }

  .timeline-content-slide-{{ section.id }}.swiper-slide-active {
    opacity: 1;
    transition: all 0.25s ease 0s;
  }

  .timeline-date-{{ section.id }} {
    margin: 0px;
    text-align: {{ slide_content_align_mobile }};
    font-size: {{ date_size_mobile }}px;
    line-height: {{ date_height }}%;
    color: {{ date_color }};
    text-transform: unset;
    font-weight: 700;
  }

  .timeline-text-{{ section.id }} {
    text-align: {{ slide_content_align_mobile }};
  }

  .timeline-text-{{ section.id }} * {
    margin: 0px;
    font-size: {{ text_size_mobile }}px;
    line-height: {{ text_height }}%;
    color: {{ text_color }};
    text-transform: unset;
    word-break: break-word;
  }

  .timeline-text-{{ section.id }} * strong {
    font-weight: 700;
    color: {{ text_highlight_color }};
  }

  .timeline-buttons-{{ section.id }} {
    display: flex;
    justify-content: {{ arrow_horizontal_align_mobile }};
    align-items: center;
    gap: 10px;
    margin-left: auto;
    margin-top: {{ arrow_mt_mobile }}px;
  }

  .timeline-btn-prev-{{ section.id }},
  .timeline-btn-next-{{ section.id }} {
    display: flex;
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: 0px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: {{ arrow_radius }}px;
    background: transparent;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    /* box-shadow: 0px 0px 10px 0px rgba(0,0,0,.15); */
  }

  .timeline-btn-prev-{{ section.id }} .animate-icon,
  .timeline-btn-next-{{ section.id }} .animate-icon {
    pointer-events: none;
    place-items: center;
    display: grid;
  }

  .timeline-btn-prev-{{ section.id }} .animate-icon:before,
  .timeline-btn-next-{{ section.id }} .animate-icon:before {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile }}px;
    height: {{ arrow_icon_size_mobile }}px;
    transform: rotate(calc(1 * 45deg));
    box-sizing: border-box;
    border-style: solid;
    border: 0px;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    position: relative;
    left: -1px;
  }

  .timeline-btn-prev-{{ section.id }} .animate-icon:before {
    left: unset;
    right: -1px;
    border-right: 0px;
    border-top: 0px;
    border-bottom: 2px solid currentColor;
    border-left: 2px solid currentColor;
  }

  .timeline-btn-prev-{{ section.id }} .animate-icon:after,
  .timeline-btn-next-{{ section.id }} .animate-icon:after {
    content: "";
    grid-area: 1 / -1;
    transition: all .2s ease;
    width: {{ arrow_icon_size_mobile | minus: 0.3 }}px;
    height: 1.6px;
    transform-origin: center;
    opacity: 0;
    background: currentColor;
    transform: scaleX(.5);
  }

  .timeline-btn-prev-{{ section.id }} span,
  .timeline-btn-next-{{ section.id }} span {
    color: {{ arrow_color }};
  }

  .timeline-btn-prev-{{ section.id }}.swiper-button-disabled,
  .timeline-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0.5;
  }

  @media(min-width: 1024px) {
    .timeline-content-slider-wrapper-{{ section.id }} {
      margin-left: 10rem;
    }  
  }

  @media(min-width: 1320px) {
    .timeline-content-slider-wrapper-{{ section.id }} {
      margin-left: 12rem;
    }  
  }

  @media(min-width: 1520px) {
    .timeline-content-slider-wrapper-{{ section.id }} {
      margin-left: 16rem;
    }
  }    

  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .timeline-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .timeline-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .timeline-pagination-wrapper-{{ section.id }} {
      justify-content: {{ dots_horizontal_align }} !important;
    }

    .timeline-pagination-{{ section.id }} {
      margin-top: {{ dots_mt }}px !important;
    }
    
    .timeline-pagination-{{ section.id }} .swiper-pagination-bullet {
      width: {{ dots_size }}px !important;
      height: {{ dots_size }}px !important;
    }

    .timeline-image-slider-{{ section.id }} {
      margin-top: {{ slider_mt }}px !important;
      margin-left: -{{ padding_horizontal }}rem !important;
      margin-right: -{{ padding_horizontal }}rem !important;
      padding-left: {{ padding_horizontal }}rem !important;
      padding-right: {{ padding_horizontal }}rem !important;
    }

    .timeline-content-slider-{{ section.id }} {
      margin-top: {{ slide_content_mt }}px !important;
      margin-left: -{{ padding_horizontal }}rem !important;
      margin-right: -{{ padding_horizontal }}rem !important;
      padding-left: {{ padding_horizontal }}rem !important;
      padding-right: {{ padding_horizontal }}rem !important;
    } 

    .timeline-content-slide-{{ section.id }} {
      flex-direction: row !important;
      gap: {{ slide_content_gap }}px !important;
    }

    .timeline-date-{{ section.id }} {
      text-align: {{ slide_content_align }};
      font-size: {{ date_size }}px;
    }

    .timeline-text-{{ section.id }} {
      text-align: {{ slide_content_align }};
    }
    
    .timeline-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .timeline-buttons-{{ section.id }} {
      justify-content: {{ arrow_horizontal_align }};
      margin-top: {{ arrow_mt }}px;
    }

    .timeline-btn-prev-{{ section.id }},
    .timeline-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
      transition: all 0.25s ease 0s;
    }

    .timeline-btn-prev-{{ section.id }} .animate-icon:before,
    .timeline-btn-next-{{ section.id }} .animate-icon:before {
      width: {{ arrow_icon_size }}px;
      height: {{ arrow_icon_size }}px;
    }

    .timeline-btn-prev-{{ section.id }} .animate-icon:after,
    .timeline-btn-next-{{ section.id }} .animate-icon:after {
      width: {{ arrow_icon_size | minus: 0.3 }}px;
    }
  }

  .timeline-image-slider-{{ section.id }} {
    overflow: visible !important;
  }
  
  .timeline-image-slider-{{ section.id }} .swiper-wrapper {
    will-change: transform;
  }
  
  /* Ð¡ÑÐ¸Ð»Ð¸ Ð´Ð»Ñ Ð¼Ð¾Ð±Ð¸Ð»ÑÐ½ÑÑ ÑÑÑÑÐ¾Ð¹ÑÑÐ² */
