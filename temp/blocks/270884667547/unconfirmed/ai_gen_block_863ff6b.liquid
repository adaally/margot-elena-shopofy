{% doc %}
  @prompt
    featured collection section with tabs
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-tabs-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-tabs__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-collection-tabs__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-collection-tabs__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 10px;
    {% if block.settings.heading_uppercase %}
      text-transform: uppercase;
    {% endif %}
  }

  .ai-collection-tabs__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-collection-tabs__nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .ai-collection-tabs__tab-button-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.tab_bg_color }};
    color: {{ block.settings.tab_text_color }};
    border: 1px solid {{ block.settings.tab_border_color }};
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: {{ block.settings.tab_font_size }}px;
    {% if block.settings.tab_uppercase %}
      text-transform: uppercase;
    {% endif %}
  }

  .ai-collection-tabs__tab-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.tab_hover_bg_color }};
    color: {{ block.settings.tab_hover_text_color }};
  }

  .ai-collection-tabs__tab-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.tab_active_bg_color }};
    color: {{ block.settings.tab_active_text_color }};
    border-color: {{ block.settings.tab_active_border_color }};
  }

  .ai-collection-tabs__content-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-collection-tabs__panel-{{ ai_gen_id }} {
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-collection-tabs__panel-{{ ai_gen_id }}.active {
    display: block;
    opacity: 1;
  }

  .ai-collection-tabs__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-collection-tabs__product-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-collection-tabs__product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    margin-bottom: 15px;
    overflow: hidden;
    background-color: {{ block.settings.product_image_bg }};
  }

  .ai-collection-tabs__product-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-collection-tabs__product-{{ ai_gen_id }}:hover .ai-collection-tabs__product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collection-tabs__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    text-decoration: none;
    display: block;
  }

  .ai-collection-tabs__product-title-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-collection-tabs__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
  }

  .ai-collection-tabs__product-price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-collection-tabs__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-style: italic;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-tabs__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-tabs__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_mobile }}, 1fr);
    }

    .ai-collection-tabs__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-collection-tabs__nav-{{ ai_gen_id }} {
      gap: 8px;
    }

    .ai-collection-tabs__tab-button-{{ ai_gen_id }} {
      padding: 10px 16px;
      font-size: calc({{ block.settings.tab_font_size }}px * 0.9);
    }
  }
{% endstyle %}

<collection-tabs-{{ ai_gen_id }}
  class="ai-collection-tabs-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-tabs__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-collection-tabs__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-collection-tabs__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-collection-tabs__subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-collection-tabs__nav-{{ ai_gen_id }}" role="tablist">
      {% for i in (1..3) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign tab_label_key = 'tab_label_' | append: i
          assign collection = block.settings[collection_key]
          assign tab_label = block.settings[tab_label_key]
        %}
        {% if collection != blank %}
          <button
            class="ai-collection-tabs__tab-button-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            role="tab"
            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
            aria-controls="ai-collection-tabs-panel-{{ ai_gen_id }}-{{ i }}"
            data-tab="{{ i }}"
          >
            {% if tab_label != blank %}
              {{ tab_label }}
            {% else %}
              {{ collection.title }}
            {% endif %}
          </button>
        {% endif %}
      {% endfor %}
    </div>

    <div class="ai-collection-tabs__content-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign collection = block.settings[collection_key]
        %}
        {% if collection != blank %}
          <div
            class="ai-collection-tabs__panel-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            role="tabpanel"
            id="ai-collection-tabs-panel-{{ ai_gen_id }}-{{ i }}"
            data-panel="{{ i }}"
          >
            {% if collection.products.size > 0 %}
              <div class="ai-collection-tabs__grid-{{ ai_gen_id }}">
                {% for product in collection.products limit: block.settings.products_to_show %}
                  <div class="ai-collection-tabs__product-{{ ai_gen_id }}">
                    <a href="{{ product.url }}" class="ai-collection-tabs__product-image-wrapper-{{ ai_gen_id }}">
                      {% if product.featured_image %}
                        <img
                          src="{{ product.featured_image | image_url: width: 600 }}"
                          alt="{{ product.featured_image.alt | escape }}"
                          class="ai-collection-tabs__product-image-{{ ai_gen_id }}"
                          loading="lazy"
                          width="600"
                          height="{{ 600 | divided_by: product.featured_image.aspect_ratio | round }}"
                        >
                      {% else %}
                        <div class="ai-collection-tabs__product-image-placeholder-{{ ai_gen_id }}">
                          {{ 'product-1' | placeholder_svg_tag }}
                        </div>
                      {% endif %}
                    </a>
                    <a href="{{ product.url }}" class="ai-collection-tabs__product-title-{{ ai_gen_id }}">
                      {{ product.title }}
                    </a>
                    <div class="ai-collection-tabs__product-price-{{ ai_gen_id }}">
                      {% if product.compare_at_price > product.price %}
                        <span class="ai-collection-tabs__product-price-compare-{{ ai_gen_id }}">
                          {{ product.compare_at_price | money }}
                        </span>
                      {% endif %}
                      <span>{{ product.price | money }}</span>
                    </div>
                  </div>
                {% endfor %}
              </div>
            {% else %}
              <div class="ai-collection-tabs__empty-{{ ai_gen_id }}">
                This collection is empty. Add products to display them here.
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</collection-tabs-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-collection-tabs__tab-button-{{ ai_gen_id }}');
        this.panels = this.querySelectorAll('.ai-collection-tabs__panel-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const tabId = tab.getAttribute('data-tab');
            this.switchTab(tabId);
          });
        });
      }

      switchTab(tabId) {
        this.tabs.forEach((tab) => {
          const isActive = tab.getAttribute('data-tab') === tabId;
          tab.classList.toggle('active', isActive);
          tab.setAttribute('aria-selected', isActive);
        });

        this.panels.forEach((panel) => {
          const isActive = panel.getAttribute('data-panel') === tabId;
          panel.classList.toggle('active', isActive);
        });
      }
    }

    customElements.define('collection-tabs-{{ ai_gen_id }}', CollectionTabs{{ ai_gen_id }});
  })();
</script>

